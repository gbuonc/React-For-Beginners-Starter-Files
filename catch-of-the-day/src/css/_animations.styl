/*
  Possible Animations:
  enter
  leave
  appear Must set transitionAppear={true} on animation component
*/
.order-enter{
  transition: all 350ms ease-in-out;
  max-height: 0;
  opacity:0
  &.order-enter-active{
    max-height: 60px;
      opacity:1
  }
}
.order-leave{
  transition: all 300ms ease-in-out;
  opacity:1
  transform: translateY(0);
  &.order-leave-active{
    opacity:0
    transform: translateY(-10px);
  }
}

.count-enter{
  transition: all 250ms;
  transform: translateY(100%);
  &.count-enter-active{
    transform: translateY(0);
  }
}
.count-leave{
  transition: all 250ms;
  position: absolute;
  left:0;
  bottom:0;
  transform: translateY(0);
  &.count-leave-active{
    transform: translateY(-100%);
  }
}
